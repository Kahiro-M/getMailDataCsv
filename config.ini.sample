[POP3]
# POP3サーバ設定
host = pop.yourdomain.example
port = 995
user = mailbox@yourdomain.example
# パスワードに「#」「;」がある場合は"で囲むこと
# 例)password = "pa;ss#word"
password = "your_password_here"
# 1=SSL使用, 0=非SSL
use_ssl = 1
# 直近N通だけ処理（負荷軽減）
max_fetch = 200

[OUTPUT]
# CSV出力設定
out_dir = ./out_csv
filename_prefix = mails_
local_dedupe = 1           ; ローカルでもUIDL重複チェックを行うなら1
state_file = ./processed_uidl.txt

[KINTONE]
# CSV列を合わせるための情報（cli-kintoneで利用）
subdomain = your-subdomain
domain = cybozu.com
app_id = 123
api_token = "your_api_token_here"

[FIELD]
# kintoneのフィールドコードとCSV列名
uidl = Uidl
subject = Subject
from = From
date = Date
text = TextBody
html = HtmlBody
